@model Ret.SalesModel
@{
    Layout = "~/Views/Shared/_admin.cshtml";
}
<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery-ui-1.10.2.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />
<script src="~/Scripts/AjaxModules.js"></script>

<style>
    .small-textbox {
        width: 70px;
    }
</style>
<!--for Load Data-->
<script type="text/javascript">
    // define here call here
    function LoadTransData(id) {
        $.ajax({
            type: 'POST',
            url: '@Url.Action("FetchRows")',
            dataType: 'json',
            data: { saleID:id},
            success: function (data) {
                DisplayData(data);
            }
        });
    }
</script>
@if (ViewBag.TransData != null)
{
    // call here
    <script type="text/javascript">
      @Html.Raw(ViewBag.TransData)
    </script>
}
<div class="page-header animated bounceInRight">
    <div class="card">
        <div class="card-block bg-primary">
            <div class="row ">
                <div class="col-lg-4">
                    <h5 class="text-uppercase font-weight-bold">Delete Sale</h5>
                </div>
                <div class="col-lg-8 align-items-end">
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Dashboard")"> <i class="icofont icofont-home" style="color:white"></i> </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Sale")" style="color:white">Home / Masters / Delete Sale</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="row animated bounceInDown">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-9 col-9"><h3>@ViewData["PageTitle"]</h3></div>
                    <div class="col-md-3 col-3">
                        <a href="@Url.Action("Index", "Sale")" class="btn btn-primary btn-outline-primary float-right">
                            <i class="icofont icofont-user-alt-3"></i> Back to List
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-block table-border-style" style="padding-left:20px; padding-right:20px">
                <h5>Sale Details</h5>
                <br />
                <div class="table-responsive table table-striped table-bordered nowrap">
                    <table class="table table-styling">
                        <tbody>
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.SalesDate)</b></td>
                                <td>@Html.Raw(Ret.TextLib.GetDateDDMMYYYY(@Html.DisplayFor(model => model.SalesDate)))</td>
                            </tr>
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.CustomerID)</b></td>
                                <td>@Html.Raw(Ret.DataLib.GetCellItems("Select CustomerName from CustomerModels Where CustomerID =" + (@Html.DisplayFor(model => model.CustomerID))))</td>
                            </tr>
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.SerialNo)</b></td>
                                <td>@ViewData["SerNo"]</td>
                            </tr>
                            <tr>
                                <td><b>@Html.DisplayNameFor(model => model.Remark)</b></td>
                                <td>@Html.DisplayFor(model => model.Remark)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <br />
                <h5>Product / Service Details</h5>
                <br />
                <div class='dt-responsive table-responsive'>
                    <table id='dtTable' class='table table-striped table-bordered nowrap'>
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Product/Service</th>
                                <th>HSN/SAC</th>
                                <th>Qty</th>
                                <th>Unit</th>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>GST %</th>
                                <th>GST Amt</th>
                                <th>Del</th>
                            </tr>
                        </thead>
                        <tbody>
                        </tbody>
                    </table>
                    <table class='table table-striped table-bordered nowrap'>
                        <thead style="visibility:collapse">
                            <tr>
                                <th>#</th>
                                <th>Product/Service</th>
                                <th>HSN/SAC</th>
                                <th>Qty</th>
                                <th>Unit</th>
                                <th>Rate</th>
                                <th>Amount</th>
                                <th>GST %</th>
                                <th>GST Amt</th>
                                <th>Del</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td align="right" colspan="6"><b>Discount</b></td>

                                <td align="right"> @Html.EditorFor(model => model.DiscountPercent, new { htmlAttributes = new { @class = "form-control small-textbox" } })</td>
                                <td align="right"> @Html.EditorFor(model => model.DiscountValue, new { htmlAttributes = new { @class = "form-control small-textbox" } })</td>
                                <td align="right"> @Html.EditorFor(model => model.Discount, new { htmlAttributes = new { @class = "form-control small-textbox", @readonly = "readonly" } })</td>
                                <td></td>
                            </tr>
                            <tr>
                                <td align="right" colspan="8"><b>Grand Total (Sub Total - Discount)</b></td>
                                <td align="right"><label id="GroundTotal" for="grandtotal"></label></td>
                                <td></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
                <hr />

                <div class="col-md-12 col-12 float-right">
                    @using (Html.BeginForm("Delete", "Sale", FormMethod.Post))
                    {
                        @Html.HiddenFor(model => model.SalesID)
                        <div class="form-group row">
                            <div class="col-sm-6">
                            </div>
                            <div class="col-sm-6">
                                <input type="submit" value="Delete" class="btn btn-danger btn-out float-right" style="margin-left:10px;" />
                                <a href="@Url.Action("Index", "Sale")" class="btn btn-success btn-outline-primary float-right">
                                    <i class="icofont icofont-user-alt-3"></i> Cancel
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
<script src="~/Scripts/js-sale.js"></script>




