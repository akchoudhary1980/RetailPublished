<script>
    var quill = new Quill('#editor', {
        theme: 'snow'
    });

    // Code for Set the value 
    const value = `<h1>New content here</h1><ul><li>Anil</li><li>Mohan</li><li>Ravi</li></ul>`
    const delta = quill.clipboard.convert(value);
    quill.setContents(delta, 'silent')
    // End
   
   // Code for Get the value 

    function getValue() {
        var editor_content = quill.root.innerHTML;
        alert(editor_content);
    }
    //End 
    

</script>
