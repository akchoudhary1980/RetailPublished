@{
    Layout = "~/Views/Shared/_admin.cshtml";
    //System.Data.DataTable StockList = Session["StockQtyList"] as System.Data.DataTable;
    string date = Ret.TextLib.GetDateDDMMYYYY(System.DateTime.Today.ToString());
    int counter = 0;
}

<div class="page-header animated bounceInRight">
    <div class="card">
        <div class="card-block bg-primary">
            <div class="row ">
                <div class="col-lg-4">
                    <h5 class="text-uppercase font-weight-bold">Stock Item Wise</h5>
                </div>
                <div class="col-lg-8 align-items-end">
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Dashboard")"> <i class="icofont icofont-home" style="color:white"></i> </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("StockQuantityWise", "Stock")" style="color:white">Home / Masters / Stock Item Wise</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>



<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">                
            </div>
            <div class="card-block">
                <div class='dt-responsive table-responsive'>
                    <table id='cbtn-selectors' class='table table-striped table-bordered nowrap'>
                        <thead>
                            <tr>
                                <th>Sr</th>
                                <th>Product Name</th>
                                <th>Purchase Quantity</th>
                                <th>Sale Quantity</th>
                                <th>Stock Quanity</th>
                                <th>Unit</th>
                                <th>Stock Date</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in ViewData.Model)
                            {                               
                                    counter = counter + 1;
                                <tr>
                                    <td>@counter</td>
                                    <td>@Ret.DataLib.GetCellItems("Select ProductName from ProductModels Where ProductID=" + item["ProductID"])</td> <!--Product Name  -->
                                    <td class="text-right">@item["PQty"]</td> <!--Purchase -->
                                    <td class="text-right">@item["SQty"]</td> <!--Sale -->
                                    <td class="text-right">@item["Stock"]</td> <!--Stock -->
                                    <td>@Ret.DataLib.GetCellItems("Select UnitName from UnitModels Where UnitID =" + Ret.DataLib.GetCellItems("Select UnitID from ProductModels Where ProductID=" + item["ProductID"]))</td> <!--Unit -->
                                    <td>@date</td> <!--Date -->
                                </tr>                               
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>




