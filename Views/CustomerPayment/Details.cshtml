                                <th>Pay Type</th>
                                <th>Pay Mode</th>
                                <th>R/P</th>
                                <th>Remark</th>
                                <th>Amount</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (sale != null)
                            {
                                foreach (var p in payment)
                                {
                                    <tr>
                                        <td>@paycount</td>
                                        <td>@Ret.TextLib.GetDateDDMMYYYY(p.TransactionDate.ToString())</td>
                                        <td>@p.PaymentType</td>
                                        <td>@p.PaymentMode</td>
                                        <td>@p.PaymentMethod</td>
                                        <td>@p.Remark</td>
                                        <td class="text-right">@Ret.TextLib.IndianRuppes(p.Amount)</td>
                                    </tr>
                                    paycount = paycount + 1;
                                }
                            }
