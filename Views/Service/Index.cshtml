@model IEnumerable<Ret.ServiceModel>
@{
    Layout = "~/Views/Shared/_admin.cshtml";
}
@{ int count = 0;}


<script src="~/Scripts/jquery-3.3.1.js"></script>
<script src="~/Scripts/jquery-ui-1.10.2.js"></script>
<link href="~/Content/themes/base/jquery-ui.css" rel="stylesheet" />

<div class="page-header animated bounceInRight">
    <div class="card">
        <div class="card-block bg-primary">
            <div class="row ">
                <div class="col-lg-4">
                    <h5 class="text-uppercase font-weight-bold">Service List</h5>
                </div>
                <div class="col-lg-8 align-items-end">
                    <div class="page-header-breadcrumb">
                        <ul class="breadcrumb-title">
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Dashboard")"> <i class="icofont icofont-home" style="color:white"></i> </a>
                            </li>
                            <li class="breadcrumb-item">
                                <a href="@Url.Action("Index", "Service")" style="color:white">Home / Masters / Service List</a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <div class="row">
                    <div class="col-md-9 col-9"><h3>@ViewData["PageTitle"]</h3></div>
                    <div class="col-md-3 col-3">
                        <a href="@Url.Action("Create", "Service")" class="btn btn-primary btn-outline-primary float-right">
                            <i class="icofont icofont-user-alt-3"></i> Add
                        </a>
                    </div>
                </div>
            </div>
            <div class="card-block">
                <div class='dt-responsive table-responsive'>
                    <table id='cbtn-selectors' class='table table-striped table-bordered nowrap'>
                        <thead>
                            <tr>
                                <th>#</th>                                
                                <th>Service Name</th>
                                <th>Unit</th>
                                <th>Service Charge</th>
                                <th>GST Slab</th>
                                <th>Category</th>
                                <th>Group</th>                                
                                <th>Edit</th>
                                <th>Del</th>
                            </tr>
                        </thead>

                        @foreach (var item in Model)
                        {
                    <tr>
                        <td>@{count++;} @count</td>

                        <td> @Html.DisplayFor(modelItem => item.ServiceName)</td>
                        <td> @Html.Raw(Ret.DataLib.GetCellItems("Select UnitName From UnitModels Where UnitID =" + (@Html.DisplayFor(modelItem => item.UnitID))))</td>
                        <td> @Html.DisplayFor(modelItem => item.ServiceCharge)</td>
                        <td> @Html.Raw(Ret.DataLib.GetCellItems("Select GSTSlabName From GSTSlabModels Where GSTSlabID =" + (@Html.DisplayFor(modelItem => item.GSTSlabID))))</td>
                        <td> @Html.Raw(Ret.DataLib.GetCellItems("Select CategoryName From CategoryModels Where CategoryID =" + (@Html.DisplayFor(modelItem => item.CategoryID))))</td>
                        <td> @Html.Raw(Ret.DataLib.GetCellItems("Select GroupName From GroupModels Where GroupID =" + (@Html.DisplayFor(modelItem => item.GroupID))))</td>                        

                        <td>
                            <a href="@Url.Action("Edit", "Service",new { id = item.ServiceID })" class="btn btn-success btn-mini btn-outline-primary"><i class='icofont icofont-ui-edit'></i></a>
                        </td>
                        <td>
                            <a href="@Url.Action("Delete", "Service",new { id = item.ServiceID })" class="btn btn-danger btn-mini btn-outline-primary"><i class='icofont icofont-ui-close '></i></a>
                        </td>
                    </tr>
                        }
                        <tbody>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

