@{
    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";

    System.Data.DataTable dt = Ret.DataLib.GetQueryTable("Select * from SliderModels");

    System.Data.DataTable plot = Ret.DataLib.GetQueryTable("SELECT TOP 4 * FROM SalePlotModels ORDER BY SalePlotID DESC");
    System.Data.DataTable home = Ret.DataLib.GetQueryTable("SELECT TOP 4 * FROM SaleHomeModels ORDER BY SaleHomeID DESC");
    System.Data.DataTable rent = Ret.DataLib.GetQueryTable("SELECT TOP 4 * FROM RentHomeModels ORDER BY RentHomeID DESC");

    string act = "";
}
<div class="row">
    <div class="col-sm-12">
        <div class="card layout">
            <div class="card-block">
                <div class="row">
                    <div class="col-md-12">
                        <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
                            <ol class="carousel-indicators">
                                @{ if (dt.Rows.Count > 0)
                                    {
                                        for (int i = 0; i < dt.Rows.Count; i++)
                                        {
                                            if (i == 0) { act = "active"; } else { act = ""; }
                                            <li data-target="#carouselExampleIndicators" data-slide-to="@i" class="@act"></li>
                                        }
                                    }
                                }
                            </ol>
                            <div class="carousel-inner" role="listbox">
                                @{
                                    if (dt.Rows.Count > 0)
                                    {
                                        for (int i = 0; i < dt.Rows.Count; i++)
                                        {
                                            if (i == 0) { act = "active"; } else { act = ""; }
                                            <div class="carousel-item @act">
                                                <img class="d-block img-fluid w-100" src="~/UploadFiles/@dt.Rows[i].ItemArray[4].ToString()" alt="slide @i">
                                            </div>
                                        }
                                    }
                                }
                            </div>
                            <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
                                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                <span class="sr-only">Previous</span>
                            </a>
                            <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
                                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                <span class="sr-only">Next</span>
                            </a>
                        </div>
                    </div>
                </div>
                <!-- Start Service area -->

            </div>
        </div>
    </div>
</div>
<!--For Plots -->
<div class="row">
    <div class="col-md-12">       
            <div class="card">
                <div class="card-header">
                    <h2>New Plots</h2>
                </div>
                <div class="card-block">
                    <div class="row search-result">
                        @if (plot.Rows.Count > 0)
                        {
                            for (int i = 0; i < plot.Rows.Count; i++)
                            {
                                System.Data.DataRow dr = plot.Rows[i];
                               
                        <div class="col-lg-3 col-md-4 col-sm-6 ">
                            <a href="http://www.narmada-group.com/d/p/@dr["SalePlotID"].ToString()">
