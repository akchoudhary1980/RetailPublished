                                    @if (@dr["MainPicture"].ToString().Contains("."))
                                    {
                                        <img class="card-img-top img-fluid" src="~/UploadFiles/@dr["MainPicture"].ToString()" alt="pic">
                                    }
                                    else
                                    {
                                        <img class="card-img-top img-fluid" src="~/UploadFiles/nopicture.jpg" alt="pic">
                                    }
                                <div class="card-block">
                                    <h5 class="card-title">@dr["PropertyName"].ToString()</h5>
                                    <p class="card-text text-muted">@dr["Amenities"].ToString()</p>
                                    <p class="card-text"><small class="text-muted">@dr["Location"].ToString()</small></p>
                                    <a href="https://api.whatsapp.com/send?phone=918349472025&text=Enquiry for Plot Advertisement ID @dr["SalePlotID"].ToString()" target="_blank">
                                        <h5 class="card-title" style="color:darkgreen">Whatsup Chat <i class="icofont icofont-phone"></i></h5>
                                    </a>
                                </div>
                                </div>
                            </a>

                        </div>
                              
                            }
                         }
                       </div>                    
                </div>
                <div class="card-footer">
                    <div class="col-sm-12 float-sm-right">
                        <a href="@Url.Action("Plots", "Home")" class="btn btn-primary btn-out float-right">More...</a>                      
                    </div>
                </div>
            </div>      
    </div>
</div>
